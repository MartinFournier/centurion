        <div class="ui-body ui-body-a" id="mainContent">
            @RenderBody()
        </div>
        @RenderSection("BelowMain", true)
        <footer data-role="footer" data-theme="b">
            <div class="ui-body">
                @RenderSection("Footer", true)
            </div>
        </footer>
    </div>
